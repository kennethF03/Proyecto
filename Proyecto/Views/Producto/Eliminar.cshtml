@model Producto

<h1>Detalle producto</h1>

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dt class="col-sm-10">@Model.Nombre</dt>

    <dt class="col-sm-2">Descripcion</dt>
    <dt class="col-sm-10">@Model.Descripcion</dt>

    <dt class="col-sm-2">Cantidad</dt>
    <dt class="col-sm-10">@Model.Cantidad</dt>

    <dt class="col-sm-2">Precio</dt>
    <dt class="col-sm-10">@Model.Precio</dt>


</dl>

<form asp-action="EliminarConfirmado" method="post">

    <input asp-for="ID_Producto" type="hidden"  />

    <div class="form-group">

        <button type="submit" class="btn" btn-danger>Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary"> Cancelar</a>

    </div>

</form>